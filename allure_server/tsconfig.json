{
  "compilerOptions": {
    "module": "commonjs",
    "composite": true,
    "noImplicitReturns": true,
    "target": "es2017",
    "rootDir": "./",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "removeComments": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ],
}
